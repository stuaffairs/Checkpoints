  <meta charset="UTF-8">
  <title>ค้นหาคะแนนเก็บนักเรียน</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      font-family: "Prompt", sans-serif;
      background: #f0f8ff;
      padding: 20px;
      text-align: center;
    }
    h1 { color: #003366; }
    input, button {
      padding: 10px;
      margin: 10px;
      font-size: 16px;
      border-radius: 8px;
    }
    button {
      background: #003366;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover { background: #0055aa; }
    #result {
      margin-top: 20px;
      padding: 15px;
      border-radius: 10px;
      background: white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      display: none;
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
      text-align: left;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 6px;
      text-align: center;
    }
    th {
      background: #003366;
      color: white;
    }
  </style>
