<body>
  <h1>ค้นหาคะแนนเก็บนักเรียน</h1>
  <input type="text" id="studentId" placeholder="กรอกรหัสประจำตัว" />
  <button onclick="search()">ค้นหา</button>

  <div id="result"></div>

  <script>
    function search() {
      const studentId = document.getElementById("studentId").value.trim();
      if (!studentId) {
        Swal.fire("แจ้งเตือน", "กรุณากรอกรหัสประจำตัว", "warning");
        return;
      }

      Swal.fire({
        title: "กำลังค้นหา...",
        allowOutsideClick: false,
        didOpen: () => Swal.showLoading()
      });

      google.script.run.withSuccessHandler(function(data) {
        Swal.close();
        const resultDiv = document.getElementById("result");
        if (data) {
          // ✅ ข้อมูลพื้นฐาน
          let html = `<h3>ข้อมูลนักเรียน</h3>
            <p><b>ห้อง:</b> ${data["ห้อง"]}</p>
            <p><b>เลขที่:</b> ${data["เลขที่"]}</p>
            <p><b>เลขประจำตัว:</b> ${data["เลขประจำตัว"]}</p>
            <p><b>ชื่อ-สกุล:</b> ${data["ชื่อ-สกุล"]}</p>`;

          // ✅ หัวข้อที่เหลือ (คะแนน)
          const keys = [
            "สมุด","ส1","ต้มยำ","รวม1",
            "ช10","ผล5","ประยุกต์","รวม2","รวม3",
            "ส20","ซ่อม","รวม4","ชุมชน","RCEP","รวม5",
            "Test","ใบงาน","รวม6","รวม7"
          ];

          html += `<h3>ตารางคะแนน</h3><table><tr>`;
          keys.forEach(k => { html += `<th>${k}</th>`; });
          html += `</tr><tr>`;
          keys.forEach(k => { html += `<td>${data[k] ?? "-"}</td>`; });
          html += `</tr></table>`;

          resultDiv.innerHTML = html;
          resultDiv.style.display = "block";
        } else {
          Swal.fire("ไม่พบข้อมูล", "กรุณาตรวจสอบรหัสประจำตัวอีกครั้ง", "error");
          resultDiv.style.display = "none";
        }
      }).searchScore(studentId);
    }
  </script>
</body>
</html>
